NAME = libftprintf.a

HEAD = ft_printf.h

FLAGS = -Wall -Wextra -Werror

C_FILES =	# ft_printf c sources hier

O_FILES = $(C_FILES:.c=.o)

.PHONY: all clean fclean re

all: $(NAME)

%.o: %.c $(HEAD)
		clang $(FLAGS) -c $<

$(NAME): $(O_FILES)
		make -C libft
		cp libft/libft.a $(NAME)
		ar rc $(NAME) $(O_FILES)
		ranlib $(NAME)

clean:
		rm -rf $(O_FILES)
		make clean -C libft

fclean: clean
		rm -rf $(NAME)
		make fclean -C libft

re:		fclean all